{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "start:sever",
			"program": "${workspaceFolder}/packages/rp2/bin/www",
			"smartStep": true
		},
		{
			"type": "node",
			"request": "launch",
			"name": "transer-file",
			"program": "${workspaceFolder}/dev.sh/transfer-files/index.js",
			"args": []
			// "args": ["service"]
			// "args": ["deployconf"]

			// "autoAttachChildProcesses": true,
			// "stopOnEntry": true
		},
		{
			"type": "node",
			"request": "launch",
			"name": "start:server w/ yarn",
			"runtimeExecutable": "yarn",
			"runtimeArgs": ["run", "start"],
			"port": 9229
		},
		{
			"type": "node",
			"request": "launch",
			"name": "cli start",
			"program": "${workspaceFolder}/cli.js",
			"args": ["start", "--quiet"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "cli kill",
			"program": "${workspaceFolder}/cli.js",
			"args": ["kill"] //, "--quiet"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "cli app",
			"program": "${workspaceFolder}/cli.js",
			"args": ["transfer", "distdev"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "cli build",
			"program": "${workspaceFolder}/cli.js",
			"args": ["transfer", "dist"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "deploy-server",
			"program": "${workspaceFolder}/packages/deploy/hooks.js",
			"smartStep": true
		},
		{
			"type": "node",
			"request": "launch",
			"name": "commands",
			"program": "${workspaceFolder}/packages/commands/index.js",
			"smartStep": true,
			"args": ["users", "createMockUsers"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "webpack:build",
			"program": "${workspaceFolder}/node_modules/.bin/webpack",
			"args": ["--config", "webpack.config.js"],
			"autoAttachChildProcesses": true,
			"stopOnEntry": true
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch Chrome against localhost",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}",
			"sourceMaps": true,
			"sourceMapPathOverrides": {
				"webpack:///./packages/rift/src": "${workspaceFolder}/packages/rift/src/*"
			}
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to remote",
			"address": "ec2-user@aws",
			"port": 9229,
			"localRoot": "${workspaceFolder}", //packages/deploy/hooks.js",
			"remoteRoot": "/home/ec2-user/monorift"
		}
	]
}
