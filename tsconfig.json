{
	"compilerOptions": {
		"jsx": "react",
		"lib": ["es2017", "es6", "dom"],
		"moduleResolution": "node",
		"target": "esnext",
		"module": "esnext",
		"incremental": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"paths": {
			"@src/*": ["./packages/rift/src/*"],
			"@kitten/*": ["./node_modules/@ui-kitten/components/*"]
		}
	},
	"exclude": ["node_modules"]
}
